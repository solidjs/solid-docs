		"start": "vinxi start",
		"e2e": "npx playwright test",
		"build:lunaria": "lunaria build",
		"preview:lunaria": "lunaria preview",
		"check:lint": "eslint .",
		"check:types": "tsc --noEmit"
	},
	"dependencies": {
		"@kobalte/core": "^0.13.9",
		"@kobalte/solidbase": "^0.0.16",
		"@lunariajs/core": "^0.0.31",
		"@oramacloud/client": "^1.3.20",
		"@solid-primitives/event-listener": "^2.4.0",
		"@solid-primitives/marker": "^0.1.0",
		"@solid-primitives/media": "^2.3.0",
		"@solidjs/meta": "^0.29.4",
		"@solidjs/router": "^0.15.3",
		"@solidjs/start": "^1.1.3",
		"@vinxi/plugin-mdx": "^3.7.2",
		"dotenv": "^16.4.7",
		"glob": "^10.4.5",
		"gray-matter": "^4.0.3",
		"postcss": "^8.5.3",
		"shiki": "^1.29.2",
		"sitemap": "^7.1.2",
		"solid-heroicons": "^3.2.4",
		"solid-js": "^1.9.5",
		"solid-list": "^0.3.0",
		"solid-mdx": "^0.0.7",
		"vinxi": "^0.5.3",
		"zod": "^3.24.2"
